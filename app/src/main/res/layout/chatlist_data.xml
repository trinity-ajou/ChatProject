<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/button"
              android:clickable="true">
<RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
    >
    <TextView
            android:id="@+id/iv_roomid"
            android:layout_width="320dp"
            android:layout_height="25dp"
            android:layout_marginEnd="16dp"

            android:layout_marginRight="16dp"
            android:layout_weight="6" android:gravity="left"
            android:paddingLeft="10dp" android:textSize="18sp"/>

    <TextView
            android:id="@+id/iv_roomtext"
            android:layout_width="322dp"
            android:layout_height="50dp"
            android:layout_weight="2"

            android:gravity="left"
            android:paddingLeft="10dp"/>
    </LinearLayout>
    <Button android:id="@+id/btnChat"

            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"

            android:text="입장"
            android:visibility="visible" tools:visibility="visible"/>
</RelativeLayout>

</LinearLayout>