<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".main_screen"
        android:background="@drawable/login_theme3" android:id="@+id/box">

    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="394dp"
            android:layout_height="51dp"
            android:id="@+id/bottom_menu"
            app:itemBackground="@color/common_google_signin_btn_text_dark_default" android:visibility="visible"
            app:menu="@menu/bottom_menu"
            android:background="#9AFFFFFF" app:itemIconTint="@color/common_google_signin_btn_text_dark_disabled"
            android:layout_marginBottom="7dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp" android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"/>

    <FrameLayout
            android:id="@+id/main_screen_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <ToggleButton
                android:id="@+id/random_match_button"
                android:layout_width="206dp"
                android:layout_height="135dp"
                android:layout_gravity="center_horizontal|center_vertical"

                android:layout_marginTop="8dp"
                android:background="@drawable/button"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="#ff7979"
                android:textOff="매 . 칭                       시 . 작"
                android:textOn="매칭 중..."
                android:textSize="24sp"
                android:textStyle="bold" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>