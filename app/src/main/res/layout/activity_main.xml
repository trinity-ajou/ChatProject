<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
 >

    <ProgressBar
            android:id="@+id/loading"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="32dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="64dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.346" app:layout_constraintHorizontal_bias="0.498"/>

   <Button
           android:text="회원가입"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           tools:layout_editor_absoluteY="590dp"
           tools:layout_editor_absoluteX="283dp"
           android:id="@+id/register"
           android:layout_alignParentEnd="true"
           android:layout_marginEnd="28dp"
           android:layout_alignParentBottom="true"
           android:layout_marginBottom="130dp"/>
    <Button
            android:text="비밀번호 찾기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="651dp"
            tools:layout_editor_absoluteX="267dp"
            android:id="@+id/password"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="24dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="60dp"/>
    <TextView
            android:text="Login"
            android:textSize="54sp"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="183dp"
            android:id="@+id/textView3"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="130dp"
            android:layout_marginTop="160dp"/>
    <Button
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_below="@+id/login_pw"
            android:id="@+id/login"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:hint="Email"
            android:layout_alignParentStart="false" android:layout_marginStart="96dp"
            android:layout_alignParentTop="false" android:id="@+id/login_email" android:layout_marginTop="300dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Password"
            android:ems="10"
            android:layout_alignParentStart="false" android:layout_marginStart="95dp"
            android:layout_alignParentBottom="false" android:id="@+id/login_pw" android:layout_marginTop="350dp"/>
</RelativeLayout>